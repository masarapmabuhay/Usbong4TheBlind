<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="UsbongDefaultParentLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/bg</item>
        <item name="android:orientation">vertical</item>  
        <item name="android:gravity">center</item>      
    </style>	       
    
	<style name="UsbongSpecialParentLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/bg</item>
        <item name="android:orientation">vertical</item>  
        <item name="android:gravity">center_vertical|center_horizontal</item>
	</style>	   
	
	<style name="UsbongDefaultTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4a452a</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>	   		

	<style name="UsbongFileChooserTextView">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#4a452a</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>	   	

	
	<style name="UsbongInstructionsTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4a452a</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>	   	
	
	<style name="UsbongTitleParentLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/title</item>
        <item name="android:orientation">vertical</item>  
        <item name="android:gravity">center</item>    
        <item name="android:paddingTop">20px</item>			          
    </style>	   

	<style name="UsbongMainMenuParentLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/bg</item>
        <item name="android:orientation">vertical</item>  
        <item name="android:gravity">center</item>      
    </style>	   

	<style name="UsbongButton">
		<item name="android:layout_width">300dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#4a452a</item>
		<item name="android:textSize">20dp</item>		
		<item name="android:layout_gravity">center</item>
		<item name="android:background">@drawable/button_yellow</item>	
		<item name="android:layout_marginBottom">5dp</item>	
    </style>	    
	    
	<style name="UsbongDefaultScrollView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:isScrollContainer">true</item>
		<item name="android:layout_weight">0.6</item>
    </style>	   
    	
	<style name="UsbongDefaultMainLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:orientation">vertical</item>   
    </style>	       
    
    <style name="UsbongDefaultBackExitButtonLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">bottom|center</item>
		<item name="android:layout_weight">0.1</item>
		<item name="android:orientation">horizontal</item>
    </style>	   
    
    <style name="UsbongDefaultBackExitButton">
		<item name="android:layout_width">136dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#4a452a</item>
		<item name="android:textSize">20sp</item>		
		<item name="android:background">@drawable/button</item>
    </style>	   
</resources>
